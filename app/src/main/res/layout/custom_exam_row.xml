<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:backgroundTint="@color/color_dark_mode_192734"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    android:id="@+id/midterm_row"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/row_layout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:padding="20dp">


        <TextView
            android:id="@+id/sname_text"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:gravity="left|center"
            android:text="Subject"
            android:textColor="@color/color_dark_mode_FFFFFF"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sid_text" />

        <TextView
            android:id="@+id/sid_text"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:gravity="center|left"
            android:text="111111111"
            android:textColor="@color/color_dark_mode_FFFFFF"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mdate_textview"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:gravity="left|center"
            android:text="Date"
            android:textColor="@color/color_dark_mode_FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sname_text" />

        <TextView
            android:id="@+id/mtime_textview"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:gravity="center|left"
            android:text="Time"
            android:textColor="@color/color_dark_mode_FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/date_textview"
            app:layout_constraintTop_toBottomOf="@+id/sname_text" />

        <TextView
            android:id="@+id/mroom_textview"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:gravity="left|center"
            android:text="Room"
            android:textColor="@color/color_dark_mode_FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/sb_text"
            app:layout_constraintTop_toBottomOf="@+id/mtime_textview" />

        <TextView
            android:id="@+id/sb_text"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:gravity="left|center"
            android:textColor="@color/color_dark_mode_FFFFFF"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/mbuilding_textview"
            app:layout_constraintTop_toBottomOf="@+id/date_textview" />

        <ImageButton
            android:id="@+id/building_picture_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/color_green_2EC1AC"
            android:src="@drawable/ic_baseline_location_on_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mbuilding_textview"
            android:layout_width="80sp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:text="ฺฺBuilding"
            android:textColor="@color/color_dark_mode_FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mdate_textview" />

        <TextView
            android:id="@+id/sr_text"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:gravity="left|center"
            android:textColor="@color/color_dark_mode_FFFFFF"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/mroom_textview"
            app:layout_constraintTop_toBottomOf="@+id/time_textview" />

        <TextView
            android:id="@+id/date_textview"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:gravity="center|left"
            android:text="DD/MM/YYYY"
            android:textColor="@color/color_dark_mode_FFFFFF"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/mdate_textview"
            app:layout_constraintTop_toBottomOf="@+id/sname_text" />

        <TextView
            android:id="@+id/time_textview"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:gravity="center|left"
            android:text="HH:MM - HH:MM"
            android:textColor="@color/color_dark_mode_FFFFFF"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/mtime_textview"
            app:layout_constraintTop_toBottomOf="@+id/sname_text" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>